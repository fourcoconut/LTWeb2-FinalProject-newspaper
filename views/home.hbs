<div class="card">
    <div class="card-header"> 
        <h4>Trang Chủ</h4>
    </div>
    <div class="card-body">
      <div class="card"><h4>Báo Nổi Bật Nhất</h4></div>
        <div class="row">
            {{#each this.hot}}
            <div class="col-sm-3 mb-3">
              
                <div class="card h-100">
                    <form action="bao/chuyenmuc/chitiet" method="post">
                    <div class="card-body ">
                        <img src="/public/imgs/bao/{{idbao}}/anh.jpg" alt="{{tieude}}" title="{{tieude}}" class="card-img-top">
                        <h4 class="card-title">{{tieude}}</h4>
                        <p class="card-text">{{tenchuyenmuc}}</p>
                        <input type="hidden" class="form-control" id="txtidbao" name="idbao" readonly value="{{idbao}}">
                        <p class="card-text float-right">{{ngaydang}}</p>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-lg btn-success">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            Xem Báo
                        </button>
                    </div>
                    </form>
                </div>
              
            </div>
            {{/each}} 
        </div>
        <div class="card"><h4>Báo Xem Nhiều Nhất</h4></div>
        <div class="row">
            {{#each this.xem}}
            <div class="col-sm-2 mb-3">
              
                <div class="card h-100">
                    <form action="bao/chuyenmuc/chitiet" method="post">
                    <div class="card-body ">
                        <img src="/public/imgs/bao/{{idbao}}/anh.jpg" alt="{{tieude}}" title="{{tieude}}" class="card-img-top">
                        <h4 class="card-title">{{tieude}}</h4>
                        <p class="card-text">{{tenchuyenmuc}}</p>
                        <input type="hidden" class="form-control" id="txtidbao" name="idbao" readonly value="{{idbao}}">
                        <p class="card-text float-right">{{ngaydang}}</p>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-lg btn-success">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            Xem Báo
                        </button>
                    </div>
                    </form>
                </div>
              
            </div>
            {{/each}} 
        </div>
        <div class="card"><h4>Báo Mới Nhất</h4></div>
        <div class="row">
            {{#each this.moinhat}}
            <div class="col-sm-2 mb-3">
              
                <div class="card h-100">
                    <form action="bao/chuyenmuc/chitiet" method="post">
                    <div class="card-body ">
                        <img src="/public/imgs/bao/{{idbao}}/anh.jpg" alt="{{tieude}}" title="{{tieude}}" class="card-img-top">
                        <h4 class="card-title">{{tieude}}</h4>
                        <p class="card-text">{{tenchuyenmuc}}</p>
                        <input type="hidden" class="form-control" id="txtidbao" name="idbao" readonly value="{{idbao}}">
                        <p class="card-text float-right">{{ngaydang}}</p>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-lg btn-success">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            Xem Báo
                        </button>
                    </div>
                    </form>
                </div>
              
            </div>
            {{/each}} 
        </div>
    </div>
    <div class="card-footer text-muted">
        <p>Nhóm Sinh Viên KHTN</p>
    </div>
</div>