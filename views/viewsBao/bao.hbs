<div class="card">
    <div class="card-header">
        <h4>Báo</h4>
    </div>
    {{#if this.empty}}
    <div class="card-body">
        <h5>Không có dữ liệu.</h5>
    </div>
    {{else}}
    <div class="card-body">
        <div class="row">
            {{#each this.bao}}
            <div class="col-sm-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <img src="/public/imgs/bao/{{idbao}}/cho-pug-mat-xe.jpg" alt="{{tieude}}" title="{{tieude}}" class="card-img-top">
                        <h4 class="card-title">{{tieude}}</h4>
                        <p class="card-text">{{noidung}}</p>
                        <p class="card-text float-right">{{tacgia}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
    <div class="card-footer text-muted">
        <p>Nhóm Sinh Viên KHTN</p>
    </div>
</div>