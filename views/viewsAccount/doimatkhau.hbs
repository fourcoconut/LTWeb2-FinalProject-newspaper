{{#section 'css'}}
<link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'js'}}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
  $('#txtDOB').datetimepicker({
    format: 'd/m/Y',
    timepicker: false,
    mask: true,
  });

  $('#frmRegister').on('submit', function (e) {
    // alert('submit called');
    e.preventDefault();
    if (validate())
      $('#frmRegister').off('submit').submit();
  })

  function validate() {
    return true;
  }
</script>
{{/section}}

<div class="card">
  <div class="card-header">
    <h4>Đổi mật khẩu</h4>
  </div>
  <div class="card-body">
      {{#if err}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          {{err}}
        </div>
        {{/if}}
    <form method="POST" action="" id="frmRegister">
      <div class="form-group">
        <input type="text" class="form-control" id="txtidtk" name="idtk" readonly value="{{lcAuthUser.idtk}}">
    </div>
      <div class="form-group">
        <label for="txtMatkhaucu">Mật khẩu cũ</label>
        <input type="text" class="form-control" id="txtMatkhaucu" name="matkhaucu">
      </div>

       <div class="form-group">
        <label for="txtMatkhau">Mật khẩu mới</label>
        <input type="text" class="form-control" id="txtMatkhau" name="matkhau">
      </div>

      <div class="form-group">
        <label for="txtMatkhaulai">Nhập lại mật khẩu</label>
        <input type="text" class="form-control" id="txtMatkhaulai" name="matkhaulai">
      </div>


      <button type="submit" class="btn btn-primary">
        <i class="fa fa-check" aria-hidden="true"></i>
        Chấp nhận
      </button>
    </form>
  </div>
  <div class="card-footer text-muted">
    Footer
  </div>
</div>